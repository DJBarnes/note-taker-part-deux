<!DOCTYPE html>
<html>
<%- include('../partials/head'); %>
<body>
  <%- include('../partials/errors', {errors: errors}); %>
  <%- include('../partials/messages', {messages: messages}); %>

  <div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="card">
        <div class="card-header bg-info text-white">
          <div class="card-title">
            Sign In
            <div style="float:right;">
              <a class="text-white" href="#">Forgot password?</a>
            </div>
          </div>
        </div>

        <div style="padding-top:30px" class="card-body">

          <form id="loginform" class="form-horizontal" role="form" action="/signin" method="post">

            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-user"></i>
                </span>
              </div>
              <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="Username">
            </div>

            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fas fa-lock"></i>
                </span>
              </div>
              <input id="login-password" type="password" class="form-control" name="password" placeholder="Password">
            </div>


            <div style="margin-top:10px" class="form-group">
              <!-- Button -->

              <div class="col-sm-12 controls">
                <input type="submit" id="btn-login" class="btn btn-success" value="Login" />
                <input type="submit" id="btn-fblogin" class="btn btn-primary" value="Login with Facebook" />
              </div>
            </div>


            <div class="form-group">
              <div class="col-md-12 control">
                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                  Don't have an account!
                  <a href="/signup">
                    Sign Up Here
                  </a>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

</body>

</html>